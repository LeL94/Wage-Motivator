<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/pb_background">

        <shape>


            <gradient
                android:angle="-90"
                android:startColor="#757575"
                android:centerColor="#616161"
                android:endColor="#424242" />

            <size
                android:width="15dp"
                android:height="15dp" />

            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:id="@+id/pb_progress">

        <clip>

            <layer-list>

                <item
                    android:bottom="2dp"
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp">

                    <shape>
                        <gradient
                            android:angle="-90"
                            android:startColor="#4caf50"
                            android:centerColor="#43a047"
                            android:endColor="#388e3c" />

                        <corners android:radius="4dp" />

                    </shape>

                </item>

            </layer-list>
        </clip>
    </item>

</layer-list>