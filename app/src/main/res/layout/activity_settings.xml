<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/autour_one"
        android:text="@string/daily_wage"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/starting_at"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/finishing_at"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/llWage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5">

        <EditText
            android:id="@+id/wageEditText"
            android:layout_width="55sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/autour_one"
            android:text="@string/euro_symbol"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStartingHour"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/llWage"
        app:layout_constraintTop_toTopOf="@+id/textView">

        <TextView
            android:id="@+id/tvStartingHour"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="09" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:text=":"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStartingMinute"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="00" />

        <Button
            android:id="@+id/btnEditStartingHour"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_edit_black_24dp"
            android:textColor="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFinishingHour"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/llStartingHour"
        app:layout_constraintTop_toTopOf="@+id/textView6">

        <TextView
            android:id="@+id/tvFinishingHour"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="18" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:text=":"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvFinishingMinute"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="00" />

        <Button
            android:id="@+id/btnEditFinishingHour"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_edit_black_24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/saveSettingsButton"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/autour_one"
        android:text="@string/btn_save"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>